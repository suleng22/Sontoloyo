const axios = require('axios');

module.exports = async (req, res) => {
  // Ambil query 'q' dari URL
  const query = req.query.q; 
  
  if (!query) {
    return res.status(400).json({ status: "error", message: "Tambahkan parameter ?q=judul_lagu" });
  }

  try {
    // 1. Cari video pakai API pihak ketiga
    const searchRes = await axios.get(`https://api.vreden.my.id/api/ytsearch?query=${encodeURIComponent(query)}`);
    const video = searchRes.data.result[0];

    if (!video) return res.json({ status: "error", message: "Gak ketemu sem!" });

    // 2. Ambil link MP4 mentah
    const dlRes = await axios.get(`https://api.vreden.my.id/api/ytdl?url=${video.url}`);
    const videoDirect = dlRes.data.result.mp4;

    // 3. Respon ke Bot Go
    res.json({
      status: "success",
      title: video.title,
      duration: video.timestamp,
      urlVideo: videoDirect, // Ini link MP4 rahasianya
      thumb: video.thumbnail
    });
  } catch (e) {
    res.status(500).json({ status: "error", message: "API lagi tumbang sem!" });
  }
};
